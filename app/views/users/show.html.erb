<div class="main-wrapper-profile">


  <div class="scanning-wrapper">
    <div class="left-side">
      <div class="user-profile-image">
        <%= image_tag @user.image, class:'profile-image center-cropped' %>
      </div>
      <div class="user-info">
        <h3><%= @user.name %></h3>
        <hr class="profile">
      </div>
      <div class="profile-nav">
        <%= render "shared/profile-subnav" %>
      </div>
      <div class="wrapper-scan">
        <%= link_to "Re-scan my Spotify Playlist", scan_playlist_path, class: 'scan-playlist', id: 'test' %>
      </div>
    </div>
    <div class="right-side">
      <div class="tab-content" id="artists">
        <%= render 'artists-genres' %>
      </div>
      <div class="tab-content hidden" id="saved">
        <%= render 'saved-events' %>
      </div>
      <div class="tab-content hidden" id="past">
        <%= render 'past-events' %>
      </div>
    </div>
  </div>

  <div id="render-scanning" class="hidden">
    <%= render 'shared/scanning' %>
  </div>






</div>


<% content_for(:after_js) do %>
  <script>
    $('#test').on('click', function(event) {
    $('#test').hide();
    $('#nav').hide();
    $('.right-side').hide();
    $('.left-side').hide();
    $('.profile-nav').hide();
    $('#render-scanning').removeClass('hidden');
    $('.scanning-wrapper').addClass('scanning-wrapper-opacity');

    });


  </script>
<% end %>
