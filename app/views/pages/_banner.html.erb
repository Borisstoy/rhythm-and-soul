<div class="banner">

  <div class="intro-banner">
    <h2>We are currently working on the beta version, improvments are on the way, stay tuned.</h2>
    <h1>Find music events that match your playlists</h1>

    <div id="job-id-container"><p class="hidden" id="job_id"></p></div>
    <div style="display:none" id="progress-bar" class="bar-align">
      <div class="progress">
        <div id="job-progress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">0%
        </div>
      </div>
    </div>
  </div>

  <div class="wrapper-left" style="background-image: url('<%= image_path "banner-home.png" %>')">
    <div class="button-one">
      <%= link_to t(".top_call_to_action", default: "Discover Music Events"), events_path, class: 'discover-music'%>
    </div>
  </div>

  <div class="wrapper-right" style="background-image: url('<%= image_path "banner-home-2.png" %>')">
    <div class="button-two">
      <% unless user_signed_in? %>
        <%= link_to 'Sign in with Spotify', user_spotify_omniauth_authorize_path, class:'login-spotify' unless user_signed_in? %>
      <% else %>
        <%= link_to "Scan my Spotify Playlist", scan_playlist_path, class: 'scan-playlist-home', id: 'test', remote: true %>
      <% end %>
    </div>
  </div>

</div>
