<div class="event-desc-image">
  <% event_artist = event.artists.uniq.first %>
  <% if event_artist.images %>
    <%= image_tag event_artist.images %>
  <% else %>
    <%= image_tag('compact-disc.png') %>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to artist_path(event_artist) do %>
      <div class="more-info">
        <p>MORE</p>
      </div>
    <% end %>
  <% end %>
</div>
<div class="event-desc-name">
  <div class="content">
    <h4><%= event_artist.name %></h4>
  </div>
</div>
<div class="event-desc-address">
  <p><%= event.venue.name %></p>
  <%= event.venue.address %>
</div>
<div class="event-desc-date">
  <%= event.date.strftime('%A, %d %b %Y %l:%M %p') %>
</div>
<div class="event-desc-links">
  <div class="event-desc-ticket">
    <%= link_to "Buy ticket", event.ticket, class:"buy-ticket-button", target: :_blank %>
  </div>
  <%= render 'events/bookmark', event: event, current_user: current_user, current_user_liked_items: @current_user_liked_items %>
</div>
